{
  "name": "project",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.1"
  },
  "devDependencies": {
    "vite": "latest"
  },
  "scripts": {
    "start": "vite",
    "dev": "vite & npm run css:watch",
    "build": "vite build && npm run css:build:production",
    "preview": "vite preview",
    "css:build:production": "tailwindcss -i ./index.css -o ./dist/tailwind.css --minify",
    "css:watch": "tailwindcss -i ./index.css -o ./dist/tailwind.css --watch"
  }
}
